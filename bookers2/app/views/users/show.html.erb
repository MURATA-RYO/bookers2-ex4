<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/list",book:@book,user:@user %>
　　</div>
   
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
          <% @books.each do |book| %>
            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th>title</th>
                  <th>body</th>
                </tr>
              </thead>
        
              <tbody>
                <tr>
                  <!--<td></td>-->
                  <td>
                    <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                    <% end %> 
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              </tbody>    
            </table>
          <% end %>
      </div>
  </div>
</div>  