<% if @range == '2' %>
<h1>Books search for "<%= params[:word] %>"</h1>
<% else %>
<h1>Users search for "<%= params[:word] %>"</h1>
<% end %>

<table class="table tabel-hover tabel-inverse">
  <% if @range == '2' %>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th colspan='3'></th>
    </tr>
  </thead>
  
  <tbody>
    <% @book.each do |book| %>
    <tr>
      <td>
        <%= link_to(book.user) do %>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %>
        <% end %>
      </td>
      <td>
        <%= link_to book.title, book, class: "book_#{book.id}" %>
      </td>
      <td><%= book.body %></td>
    </tr>
        <% end %>
  </tbody>
  <% else %>
  
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>  
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %></td>
        <td><%= user.name%></td>
        <td><%= link_to "show", user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>  
  </tbody>
  <% end %>    
</table>